<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.infowars"
       name="Infowars"
       version="2.1.9"
       provider-name="Thomas Meadows, Spinalcracker">
  <requires>
		<import addon="xbmc.python" version="2.24.0"/>
		<import addon="plugin.video.youtube" version="5.2.1"/>
        <import addon="script.module.addon.common" version="2.0.0" />
    </requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video</provides>
	</extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Videos from Infowars.com Including live daily shows</summary>
    <description lang="en_GB">Videos from Infowars.com Including live daily shows</description>
	<news>
Version 2.1.9
- Fixed On demand section
- Added On demand menu navigation
- Added Banned.video icon
- Added American Journal Icon
- Fixed m3u8 files aj/wr

	</news>
	<disclaimer lang="en_GB">This Project was made without association of the creators of infowars.com</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
    <forum>http://forum.kodi.tv/showthread.php?tid=198601</forum>
    <website>http://www.infowars.com</website>
	<source>https://github.com/Spinalcracker/repo-plugins/tree/jarvis/plugin.video.infowars</source>
  	<email></email>
  </extension>
</addon>
<addon id="repository.infowars" name="Infowars Update Add-ons" provider-name="PEWKodi Add-ons" version="1.0.7">
  <extension point="xbmc.addon.repository" name="Infowars Update Add-ons Repository">
    <dir>
    <info compressed="false">https://raw.githubusercontent.com/pewkodi/infowars/master/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/pewkodi/infowars/master/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/pewkodi/infowars/master/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install InfoWars Update Add-ons</summary>
    <description>Download and install add-ons from the ChiBo Add-ons repository. See http:// for more information.</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>